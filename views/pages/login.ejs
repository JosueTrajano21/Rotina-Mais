
<%- include('../partials/header') %>

    <main class="login-container">
        <form class="login-box" method="POST" action="/login">

            <!-- Título principal do formulário -->
            <h1>Entrar no Rotina+</h1>

            <!-- Campo para email -->
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Digite seu email">

            <!-- Campo para senha -->
            <label for="senha">Senha</label>
            <input type="password" id="senha" name="senha" placeholder="Digite sua senha">

            <!-- Parte onde o usuário escolhe se é paciente ou psicólogo -->
            <div class="tipo-usuario">
                <span>Eu sou...</span>
                <!-- Aqui o usuário seleciona qual tipo ele é, e só pode marcar um -->
                <label><input type="radio" name="tipo" value="paciente"> Paciente</label>
                <label><input type="radio" name="tipo" value="psicologo"> Psicólogo</label>
                <!-- Essa escolha ajuda a direcionar o usuário pro fluxo correto do sistema -->
            </div>

            <!-- Caso de login ou senha sejam incorretos -->
            <% if (erro) { %>
                <div class="erro"><%= erro %></div>
            <% } %>

            <!-- Botões principais para enviar ou ir para cadastro -->
            <div class="botoes">
                <!-- Botão para enviar o formulário -->
                <a href="/"><button type="submit" class="btn entrar">Entrar</button></a>

                <!-- Botão para seguir para a parte de cadastro -->
                <a href="./registro"><button type="button" class="btn cadastrar">Cadastrar</button></a>
            </div>
        </form>
    </main>

<%- include('../partials/footer') %>