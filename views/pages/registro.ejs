<%- include('../partials/header', { titulo: 'Entrar no Rotina+', css: 'Registro.css' }) %>

<main class="login-container">
    <form class="login-box" method="POST" action="/registro">

        <h1>Entrar no Rotina+</h1>

        <label for="nome">Nome Completo</label>
        <input type="text" id="nome" name="nome" placeholder="Digite seu nome completo">

        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Digite seu email">

        <label for="senha">Senha</label>
        <input type="password" id="senha" name="senha" placeholder="Digite sua senha">

        <div class="tipo-usuario">
            <span>Eu sou...</span>
            <label><input type="radio" name="tipo" value="paciente"> Paciente</label>
            <label><input type="radio" name="tipo" value="psicologo"> Psic√≥logo</label>
        </div>

        <% if (erro) { %>
            <div class="erro"><%= erro %></div>
         <% } %>

        <div class="botoes">
             <a href="/"><button type="submit" class="btn entrar">Cadastrar</button></a>
             <a href="./login"><button type="button" class="btn cadastrar">Login</button></a>
        </div>
    </form>
</main>

